<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    tools:context="com.example.lforestor.superminiuno.GroundPlay">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/blue0"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/imageButton"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        android:src="@drawable/red5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="70dp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner">
    </com.google.android.gms.ads.AdView>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/green0"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentRight="true"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="1000"
        />

    <TextView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="0" />

    <TextView
        android:id="@+id/plus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:text="+1"
        android:textColor="#ff1014"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/btsound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView"
        android:background="@android:color/transparent"
        android:layout_marginRight="10dp"
        android:src="@drawable/soundon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#696969 "
        android:id="@+id/or"
        />

</RelativeLayout>
